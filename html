         {
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', timeZone: 'Asia/Kolkata' };
            document.getElementById('date').innerText = new Date().toLocaleDateString('en-IN', options);
        }
        updateDate();
    </script>
